<%= javascript_pack_tag "App" %>

<%= content_tag :div,
    id: "store-data",
    data: { products: @products } do %>
<% end %>

<div id="store"></div>

<div class="container">
  <!--note: check styling for class "product"-->
  <h1>fire stickers.win rocket</h1>

  <div>
    <h2>5-Pack for $5</h2>
    <h3>Free shipping!</h3>
    <div class="sticker">
      <%= image_tag("BulldogPNG.png", alt: "BULLY PUP") %>
    </div>
  </div>

  <%= form_tag charges_path, class: "stripe-payment-form" do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
    </article>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="sticker 5-pack"
            data-amount="500"
            data-label="Buy Me!"
            data-locale="auto"></script>
  <% end %>

</div>
